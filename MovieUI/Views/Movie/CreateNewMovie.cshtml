@model MovieUI.Models.MovieVM
<div class="container">
    <h3>Add New Movie: </h3>
    @using (Html.BeginForm("CreateNewMovie", "Home", FormMethod.Post))
    {
        <div>
            <table border="1" class="table table-bordered" style="background-color:white;width:500px;">
                <tbody>
                    <tr>
                        <td>
                            Title:
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Title, new {@Value = "Enter Title", @class = "red" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Genre:
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Genre, new {@Value = "Enter Genre", @class = "red" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Director:
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Director, new {@Value = "Enter Director", @class = "red" })
                        </td>
                    </tr>
                     <tr>
                        <td>
                            ReleaseDate:
                        </td>
                        <td>                            
                           @Html.TextBoxFor(m => m.ReleaseDate, new {placeholder ="dd/mm/yyyy", @Value = "Enter Date", @class = "red"})
                        </td>
                    </tr>
                   
                    <tr>
                        <td>
                            <input type="submit" class="btn-primary" />
                        </td>
                    </tr>
                        <p>Go to <a href="https://localhost:5001/Movie/MoviesList"> Movie List</a>.</p>
                </tbody>
            </table>
        </div>
    }
</div>